# =============================================================================
# Ethereum Protocol Specification Compliance Verifier - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=8192

# Optional: OpenAI as fallback
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# -----------------------------------------------------------------------------
# Vector Database (ChromaDB)
# -----------------------------------------------------------------------------
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION_NAME=eth_specifications

# -----------------------------------------------------------------------------
# Knowledge Graph (Neo4j) - Optional
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# -----------------------------------------------------------------------------
# GitHub Integration
# -----------------------------------------------------------------------------
# GitHub App Configuration (for bot)
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=./private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub Personal Access Token (for CLI)
GITHUB_TOKEN=your_github_token_here

# -----------------------------------------------------------------------------
# Ethereum Specifications
# -----------------------------------------------------------------------------
EXECUTION_SPECS_REPO=ethereum/execution-specs
CONSENSUS_SPECS_REPO=ethereum/consensus-specs
DEFAULT_FORK=cancun

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Verification settings
CONFIDENCE_THRESHOLD=0.7
MAX_FINDINGS_PER_RUN=100

# -----------------------------------------------------------------------------
# Server Configuration (for GitHub Bot)
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4
